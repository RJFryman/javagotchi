extends ../shared/template

block content
  .row
    .small-3.columns
      h2 My Activities
      if activities.length > 0
        table#activitiestable
          thead
            th(colspan='2') Activities
          tbody
      a(href='/activities/new')
        button Add an Activity!
    .small-9.columns
      .row
        .small-12.columns
          h1= showUser.name
          //if user._id === showUser._id
          h4 Home is at #{showUser.coordinate.join(', ')}
          h4 Your last login was at #{showUser.lastLogin.getUTCHours()}:#{showUser.lastLogin.getUTCMinutes()} on #{showUser.lastLogin.getUTCMonth()}/#{showUser.lastLogin.getUTCDate()}/#{showUser.lastLogin.getUTCFullYear()}.
          div#nodebucksbox
            h4 #{showUser.nodeBucks.toString()}
      .row#petBox
        .small-12.columns
          if pets.length > 0
            each pet in pets
              table#pettable
                thead
                  th(colspan='2') pet.name
                tbody
                  tr
                    td Species
                    td pet.species
                  tr
                    td Class
                    td pet.class
                  tr
                    td Status
                    td pet.status
          if pets.length === 0
            // && user._id === showUser._id
            a(href='/pets/new')
              button.alert#getPet Welcome to Nod&#233;Mon! Click here to get your first pet!

block less
  link(rel='stylesheet', href='/less/users.css')
