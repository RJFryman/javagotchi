extends ../shared/template
block less
  link(rel='stylesheet', href='/less/activityshow.css')

block content
  h1 Activity

  .row#topbox
    .small-6.columns
      h3= activity.name
    .small-3.columns
      h4= moment(activity.date).format('dddd')
      h4= moment(activity.date).format('MMMM Do YYYY')
    .small-3.columns
      if activity.currentweather
        img(src= activity.currentweather.icon)
        .weather= activity.currentweather.description
        .weather= activity.currentweather.feelslike
      if activity.historicweather
        .weather= activity.historicweather.meantemp
        .weather= activity.historicweather.maxtemp
        .weather= activity.historicweather.mintemp
        .weather= activity.historicweather.precip
  .row#middlebox
    .small-4.columns
      h5 Description
      p= activity.description
    .small-4.columns
      h5 Activity Companion
      div= pet.name
      img(src= pet.image)
    .small-4.columns
      #map
      table
        tbody
          td
            img(src= activity.location.icon)
          td
            div#venuename= activity.location.venuename
            div= activity.location.venueaddress
            div= activity.location.venuecitystate
  .row#bottombox
    .small-3.columns
      h5 Activity Category
      p= activity.category
    .small-3.columns
      h5 Activity Duration
      span= activity.duration + ' '
      span minutes
    .small-6.columns

  .row
