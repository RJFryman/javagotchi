extends ../shared/template

block less
  link(rel='stylesheet', href='/less/activity.css')

block content
  h1= title

  .row
    .small-12.columns
      form
        fieldset
          legend Add An Activity
          .row
            .small-4.columns
              label Title
              input(type='text', name='name', autofocus='true', placeholder='Walk with my Dragon')
              label Date
              input(type='date', name='date')
              label Category
              select
                option Walking
                option Running
                option Socializing
                option Hiking
                option Swimming
                option Programming
                option Reading
                option Eating
              label Activity Duration
              select
                option 5 minutes
                option 30 minutes
                option 1 hour
                option 2 hours
                option > 2 hours
              label Description
              textarea#description(name='description', placeholder='Had a totally awesome time')
              input(type='hidden', name='userId')
              input(type='hidden', name='nodemonId')
            .small-4.columns.hide#weathersection
              label Add Weather Information To This Activity
              button#queryweather.radius.tiny Get Current Weather
              button#historicweather.radius.tiny Get Historic Weather
              #historicweathersearch.hide
                label Select Date
                input(type='date', name='date')#historicdate
                label Enter Location
                input(type='text', name='location', placeholder='TN/Nashville')#historicplace
                button#gethistoricweather.radius.tiny Get Weather
              #weatherdata
            .small-4.columns.hide#locationsection
              label Add A Location To This Activity
              button#queryfoursquare.radius.tiny Get Current Location
              button#otherlocation.radius.tiny Search Locations
              #locationsearch.hide
                label Search Name
                input(type='text', name='date', placeholder='Chipotle')#searchlocation
                label Enter Location
                input(type='text', name='location', placeholder='Dallas, TX')#citystate
                button#searchfoursquare.radius.tiny Search Locations
              //select#venueselect
              #locationdata
          .row
            .small-12.columns
              #map
          .row
            .small-4.columns
              label &nbsp
              button.radius.small Add Activity

block scripts
  script(src='/js/source/activity.js')
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyD7SHoaSpx_SkDf3Qr3MSza5U3qtnEhATw&sensor=true')
